<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ConversorController">
   <children>
      <AnchorPane prefHeight="480.0" prefWidth="640.0" styleClass="background" stylesheets="@DarkTheme.css">
         <children>
            <TextField fx:id="numTempF" layoutX="59.0" layoutY="90.0" prefHeight="44.0" prefWidth="112.0" styleClass="text-field">
               <font>
                  <Font name="Courier New" size="20.0" />
               </font>
            </TextField>
            <Label layoutX="70.0" layoutY="14.0" prefHeight="44.0" prefWidth="486.0" styleClass="label-header" text="Informe a temperatura a ser convertida Cºou Fº">
               <font>
                  <Font name="Courier New" size="20.0" />
               </font>
            </Label>
            <Button fx:id="Celsius" layoutX="20.0" layoutY="151.0" mnemonicParsing="false" onAction="#ConvCelsius" prefHeight="38.0" prefWidth="189.0" text="CONVERTER PARA °C">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font></Button>
            <Button fx:id="Fahrenheit" layoutX="448.0" layoutY="151.0" mnemonicParsing="false" onAction="#ConvFahrenheit" prefHeight="38.0" prefWidth="150.0" text="CONVERTER °F">
               <font>
                  <Font name="Courier New" size="12.0" />
               </font></Button>
            <Label layoutX="80.0" layoutY="64.0" styleClass="label-bright" text="Fahrenheit">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <Label layoutX="494.0" layoutY="64.0" styleClass="label-bright" text="Celsius">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Label>
            <TextField fx:id="numTempC" layoutX="461.0" layoutY="90.0" prefHeight="44.0" prefWidth="112.0" styleClass="text-field">
               <font>
                  <Font name="Courier New" size="20.0" />
               </font>
            </TextField>
            <Button fx:id="limpar" layoutX="294.0" layoutY="422.0" mnemonicParsing="false" onAction="#limpar" text="Limpar" />
            <Label fx:id="resultadoC" layoutX="422.0" layoutY="206.0" prefHeight="68.0" prefWidth="218.0" styleClass="label-header" textFill="#199700">
               <font>
                  <Font name="Courier New" size="25.0" />
               </font>
            </Label>
            <Label fx:id="resultadoF" layoutX="20.0" layoutY="206.0" prefHeight="68.0" prefWidth="189.0" styleClass="label-header" textFill="#199700">
               <font>
                  <Font name="Courier New" size="25.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
   </children>
</VBox>
